<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="wizard_import_file" model="ir.ui.view">
			<field name="name">wizard.wizard.import.file.form</field>
			<field name="model">import.file</field>
			<field name="arch" type="xml">
				<form string="Import Chart Of Accounts">
					<group>
						<field name="import_option" widget="radio" />
					</group>

					<group>
						<field name="file_import" filename="name"/>
					</group>
					<footer>
						<button string="Import" name="import_file" type="object" class="oe_highlight" />
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="import_file" model="ir.actions.act_window">
			<field name="name">Import file</field>
			<field name="res_model">import.file</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_import_chart" />
			<field name="target">new</field>
		</record>

		<!--<menuitem id="menu_import_chart_of_account" name="Imports" parent="account.menu_finance" groups="account.group_account_manager" sequence="5"/>-->
		<menuitem id="menu_import_file" action="import_file" name="Import file" parent="account.menu_finance_receivables" sequence="0"/>

	</data>
</odoo>
